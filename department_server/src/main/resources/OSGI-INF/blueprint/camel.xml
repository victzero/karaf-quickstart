<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
           http://www.osgi.org/xmlns/blueprint/v1.0.0 https://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <!-- here is Camel configured with a number of routes -->
  <camelContext id="myBatisAndCamel2" xmlns="http://camel.apache.org/schema/blueprint">

    <!-- route that generate new orders and insert them in the database -->
    <route id="generateOrder-route2">
      <from uri="timer:foo2?period=2s"/>
      <!--<from uri="cxfrs://http://localhost:9120/rest"/>-->
      <transform>
        <method ref="departmentService" method="generateOrder"/>
      </transform>
      <to uri="bean:departmentService?method=processOrder"/>
      <log message="Inserted new order ${body}"/>
    </route>

  </camelContext>
  <!-- END SNIPPET: e2 -->

</blueprint>
